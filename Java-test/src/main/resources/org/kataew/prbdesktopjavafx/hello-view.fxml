<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kataew.prbdesktopjavafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="TOP_CENTER" maxWidth="400.0" minWidth="300.0" prefHeight="200.0" prefWidth="300.0" HBox.hgrow="SOMETIMES">
      <children>
         <ListView fx:id="peopleListView" maxWidth="400.0" prefHeight="300.0" prefWidth="300.0" />
          <Button onAction="#onHelloButtonClick" text="Показать список" />
      </children>
   </VBox>
   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <ImageView fx:id="myImageView" fitHeight="150.0" fitWidth="193.0" pickOnBounds="true" preserveRatio="true" />
         <Button mnemonicParsing="false" onAction="#onSaveAsPdfClick" text="Сохранить в pdf" />
      </children>
   </VBox>
   <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0">
      <fx:include scaleX="2" scaleY="2" source="Rooms.fxml" />
   </VBox>

</HBox>
